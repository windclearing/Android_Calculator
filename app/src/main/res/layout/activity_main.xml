<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textSize="48sp"
        android:gravity="end|bottom"
        android:padding="24dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:textColor="#333333"
        android:text="0" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="5"
        android:useDefaultMargins="true">

        <!-- 第一行 -->
        <Button android:id="@+id/btn_clear"
            android:text="C"
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#FFE0E0"
            android:textColor="#FF0000"/>
        <Button android:id="@+id/btn_backspace"
            android:text="←"
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#FFE0E0"
            android:textColor="#FF0000"/>
        <Button android:id="@+id/btn_percent"
            android:text="%"
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#FFE0E0"
            android:textColor="#FF0000"/>
        <Button android:id="@+id/btn_div"
            android:text="÷"
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#E3F2FD"
            android:textColor="#2196F3"/>

        <!-- 第二行 -->
        <Button android:id="@+id/btn_7"
            android:text="7"
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#FFFFFF"/>
        <Button android:id="@+id/btn_8"
            android:text="8"
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#FFFFFF"/>
        <Button android:id="@+id/btn_9"
            android:text="9"
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#FFFFFF"/>
        <Button android:id="@+id/btn_mul"
            android:text="×"
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#E3F2FD"
            android:textColor="#2196F3"/>

        <!-- 第三行 -->
        <Button android:id="@+id/btn_4"
            android:text="4"
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#FFFFFF"/>
        <Button android:id="@+id/btn_5"
            android:text="5"
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#FFFFFF"/>
        <Button android:id="@+id/btn_6"
            android:text="6"
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#FFFFFF"/>
        <Button android:id="@+id/btn_sub"
            android:text="-"
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#E3F2FD"
            android:textColor="#2196F3"/>

        <!-- 第四行 -->
        <Button android:id="@+id/btn_1"
            android:text="1"
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#FFFFFF"/>
        <Button android:id="@+id/btn_2"
            android:text="2"
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#FFFFFF"/>
        <Button android:id="@+id/btn_3"
            android:text="3"
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#FFFFFF"/>
        <Button android:id="@+id/btn_add"
            android:text="+"
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#E3F2FD"
            android:textColor="#2196F3"/>

        <!-- 第五行 -->
        <Button android:id="@+id/btn_0"
            android:text="0"
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:backgroundTint="#FFFFFF"/>
        <Button android:id="@+id/btn_dot"
            android:text="."
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#FFFFFF"/>
        <Button android:id="@+id/btn_equal"
            android:text="="
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"/>

    </GridLayout>

</LinearLayout>
